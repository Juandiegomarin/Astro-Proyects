---
interface Props {
  name: string;
  url: string;
  isBig?: boolean;
}

// IMPORTANTE CREAR UN REPOSITORIO GENERAL PARA TODOS LOS PROYECTOS DE ASTRO ,
// Y CREAR UN README CON COSAS INTERESANTES PARA MIRAR EN EL FUTURO

const { name, url, isBig = false } = Astro.props;
const id = url.split("/").at(-2);
const image = `https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/${id}.png`;
---

<!-- Estilo condicional basico --><!-- class={`rounded flex flex-col justify-center items-center p-2 ${!isBig && 'border'}`} -->
<a
  href=`/pokemons/${name}`
  class:list={[
    `rounded flex flex-col justify-center items-center p-2`,
    {
      border: !isBig,
    },
  ]}
>
  <img
  transition:name=`${name}-image`
    src={image}
    alt={name}
    class:list={[
      {
        "w-86 h-86": isBig,
        "w-22 h-22": !isBig,
      },
    ]}
  />
  <span
    class:list={[
      "text-center w-full capitalize font-bold",
      { "text-4xl text-blue-300": isBig },
    ]}
  >
    #{id} {name}</span
  >
</a>

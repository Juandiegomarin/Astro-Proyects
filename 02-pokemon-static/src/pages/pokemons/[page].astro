---
import type { GetStaticPaths } from "astro";
import MainLayout from "@layouts/MainLayout.astro";
import PokemonCard from "@components/pokemons/PokemonCard.astro";

import type { PokemonListResponse } from "@interfaces/pokemon-list.response";

export const getStaticPaths = (async ({ paginate }) => {
	const resp = await fetch("https://pokeapi.co/api/v2/pokemon?limit=151");
	const { results } = (await resp.json()) as PokemonListResponse;

	return paginate(results, { pageSize: 20 });
}) satisfies GetStaticPaths;

const title = "Pokemon Static | Home";
const { page } = Astro.props;


---

<MainLayout title={title}>

	<h1 class="text-3xl">Lista de Pokemon</h1>
	<hr />
	<section
		aria-label="Pokemon List"
		class="grid grid-cols-1 sm:grid-cols-4 lg:grid-cols-5 gap-4 mt-5"
	>
		{
			page.data.map(({ name, url }) => (
				<PokemonCard name={name} url={url} />
			))
		}
	</section>
	<section class="flex mt-10 gap-2 items-center">

		<a 
		href={page.url.first} 
		class:list={[
			'btn',{
				disabled:(page.currentPage == page.start + 1)
			},
		]}>Inicio</a>

		<a 
		href={page.url.prev} 
		class:list={[
			'btn',{
				disabled:!page.url.prev
			},
		]}>Anterior</a>

		<a 
		href={page.url.next} 
		class:list={[
			'btn',{
				disabled:!page.url.next
			},
		]}>Siguiente</a>
		<a 
		href={page.url.last} 
		class:list={[
			'btn',{
				disabled:(page.currentPage == page.lastPage)
			},
		]}>Final</a>
		<div class="flex flex-1"></div>
		<span class="text-xl font-bold">PÃ¡gina {page.currentPage}</span>
	</section>

	<style>
		@reference "@styles/global.css";
		.btn {
			@apply bg-blue-500 p-2 text-white rounded-md;
		}
		.disabled{
			@apply bg-gray-600 text-gray-400
		}
	</style>
</MainLayout>
